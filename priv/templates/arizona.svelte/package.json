{
  "name": "{{name}}",
  "type": "module",
  "scripts": {
    "dev": "vite --config assets/vite.config.js",
    "build:js": "vite build --config assets/vite.config.js --mode development",
    "build:js:prod": "vite build --config assets/vite.config.js --mode production",
    "build:css": "npx tailwindcss -c assets/tailwind.config.js -i assets/css/app.css -o priv/static/assets/app.css",
    "build:css:prod": "npx tailwindcss -c assets/tailwind.config.js -i assets/css/app.css -o priv/static/assets/app.css --minify",
    "build": "npm run build:js && npm run build:css",
    "build:prod": "npm run build:js:prod && npm run build:css:prod",
    "preview": "vite preview --config assets/vite.config.js"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/cli": "^4.1.13",
    "@vitejs/plugin-legacy": "^7.2.1",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "svelte": "^5.39.6",
    "tailwindcss": "^4.1.13",
    "terser": "^5.44.0",
    "vite": "^7.1.7"
  },
  "dependencies": {
    "@arizona-framework/client": "^0.2.0"
  }
}
