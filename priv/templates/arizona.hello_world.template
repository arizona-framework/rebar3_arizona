{description, "Arizona Framework application"}.
{variables, [
    {name, "arizona_hello_world", "Name of the Arizona application"}
]}.

%% /config

{template, "arizona.hello_world/config/sys.config", "{{name}}/config/sys.config"}.

%% /priv

{file, "arizona.hello_world/priv/static/favicon.ico", "{{name}}/priv/static/favicon.ico"}.
{file, "arizona.hello_world/priv/static/robots.txt", "{{name}}/priv/static/robots.txt"}.

%% /src

{template, "arizona.hello_world/src/app.src", "{{name}}/src/{{name}}.app.src"}.
{template, "arizona.hello_world/src/app.erl", "{{name}}/src/{{name}}_app.erl"}.
{template, "arizona.hello_world/src/erl_reloader.erl", "{{name}}/src/{{name}}_erl_reloader.erl"}.
