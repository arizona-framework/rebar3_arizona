{minimum_otp_vsn, "28"}.

{erl_opts, [
    debug_info,
    warnings_as_errors,
    warn_missing_spec
]}.

{deps, [
    {eqwalizer_support,
        {git_subdir, "https://github.com/whatsapp/eqwalizer.git", {branch, "main"},
            "eqwalizer_support"}}
]}.

{dialyzer, [
    {plt_apps, all_deps},
    {plt_extra_apps, [
        eunit
    ]},
    {warnings, [
        unknown,
        unmatched_returns
    ]},
    incremental
]}.

{alias, [
    {check, [
        {fmt, "--check"},
        lint,
        hank,
        xref
        % FIXME: Cannot use dialyzer
        % {do, "default as test dialyzer"}
    ]},
    {test, [
        {eunit, "--cover"},
        {ct, "--cover"},
        % {cover, "--min_coverage 85 --verbose"},
        ex_doc
    ]},
    {ci, [
        check,
        {do, "default as test test"}
    ]}
]}.

{profiles, [
    {default, [
        {xref_checks, [
            exports_not_used
        ]}
    ]},
    {test, [
        {cover_enabled, true},
        {cover_opts, [verbose]},
        {erl_opts, [
            debug_info,
            nowarn_missing_spec,
            warnings_as_errors
        ]},
        {dialyzer, [
            {plt_apps, all_deps},
            {plt_extra_apps, [
                eunit
            ]},
            {warnings, [
                unknown,
                unmatched_returns
            ]},
            incremental
        ]},
        {extra_src_dirs, [{"test", [{recursive, true}]}]},
        {xref_checks, []}
    ]}
]}.

{project_plugins, [
    {rebar3_hex, "7.0.11"},
    {erlfmt, "1.7.0"},
    {rebar3_lint, "4.1.1"},
    {rebar3_hank, "1.4.1"},
    {rebar3_ex_doc, "0.2.30"}
]}.

{shell, [
    {apps, [rebar3_arizona]}
]}.

{erlfmt, [
    write,
    {files, [
        "elvis.config",
        "rebar.config",
        "src/*.app.src",
        "src/**/*.erl",
        "test/**/*.erl"
    ]}
]}.

{ex_doc, [
    {extras, [
        "README.md",
        "LICENSE.md"
    ]},
    {main, "README.md"},
    {api_reference, false},
    {source_url, "https://github.com/arizona-framework/rebar3_arizona"},
    {prefix_ref_vsn_with_v, false}
]}.

{hex, [{doc, #{provider => ex_doc}}]}.
